@require '../lib/vars.styl'

body
  background white
  font 300 normal 16px/1.5 Roboto, sans-serif
  padding 20px 40px

img
  padding-top 25px
  max-width 500px

h2
  color: #00c7b7
  font-size: 35px
  margin-bottom auto

.hl
  font-weight bold
  color react-blue

small
  font-size 10px

.App
  display flex
  background white
  min-width 320px
  padding 20px 100px

  p
    color white

  a
    color rgba(black, .4)
    font-style italic
    text-decoration none

.Footer
  align-items center
  display flex
  flex-direction row
  justify-content center
  align-items flex-end
  padding-top 30px
  height 20vh

  p
    padding-top 2em
    vertical-align middle
    font-size em(8)
    line-height 1.1
    text-transform uppercase
    letter-spacing .2em
    color rgba(black, .4)
    text-align right
    font-size .5em

  a
    vertical-align middle
    border-left 1px solid rgba(black, .1)
    margin-left .5em
    margin-top 0
    padding-left .5em

  img
    max-width 3em

@media (max-width: 500px)
  img
    max-width 300px

  .App
    min-width 320px
    padding 20px 10px

  .Footer
    img
      max-width 50px

